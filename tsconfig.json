{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ESNext",
    "paths": {
      "*": ["src/*", "node_modules/*"],
    },
    "typeRoots" : ["./src/typings"]
  },
  "include": [
    "src/**/*"
  ],
}